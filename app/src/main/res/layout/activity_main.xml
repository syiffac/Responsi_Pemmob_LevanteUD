<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Image with overlay -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="220dp">

                <ImageView
                    android:id="@+id/iv_header"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="Levante Stadium"
                    android:scaleType="centerCrop"
                    android:src="@drawable/levante_stadium" />

                <!-- Dark overlay for better text visibility -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/image_overlay" />

                <!-- Club Logo Overlay - Diperbesar -->
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/circle_white_bg"
                    android:contentDescription="Levante Logo"
                    android:padding="12dp"
                    android:src="@drawable/levante_logo" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <!-- Content Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            android:backgroundTint="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Title -->
                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/title"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@color/levante_dark_blue"
                    android:gravity="center"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="sans-serif-medium" />

                <!-- Divider -->
                <View
                    android:layout_width="60dp"
                    android:layout_height="3dp"
                    android:layout_gravity="center"
                    android:background="@color/levante_red"
                    android:layout_marginBottom="16dp" />

                <!-- Description -->
                <TextView
                    android:id="@+id/tv_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ud_desc"
                    android:textSize="15sp"
                    android:textColor="@color/text_gray"
                    android:lineSpacingMultiplier="1.4"
                    android:justificationMode="inter_word" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Menu Buttons Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            android:backgroundTint="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Explore More"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/levante_dark_blue"
                    android:gravity="center"
                    android:layout_marginBottom="20dp" />

                <!-- Club History Button -->
                <LinearLayout
                    android:id="@+id/btn_club_history"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/menu_button_bg"
                    android:padding="16dp"
                    android:layout_marginBottom="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_history"
                        android:layout_marginEnd="16dp"
                        android:contentDescription="History Icon" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Club History"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_dark" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_arrow_right"
                        android:contentDescription="Arrow Right" />

                </LinearLayout>

                <!-- Head Coach Button -->
                <LinearLayout
                    android:id="@+id/btn_head_coach"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/menu_button_bg"
                    android:padding="16dp"
                    android:layout_marginBottom="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_coach"
                        android:layout_marginEnd="16dp"
                        android:contentDescription="Coach Icon" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Head Coach"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_dark" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_arrow_right"
                        android:contentDescription="Arrow Right" />

                </LinearLayout>

                <!-- Team Squad Button -->
                <LinearLayout
                    android:id="@+id/btn_team_squad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/menu_button_bg"
                    android:padding="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_team"
                        android:layout_marginEnd="16dp"
                        android:contentDescription="Team Icon" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Team Squad"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_dark" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_arrow_right"
                        android:contentDescription="Arrow Right" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>
