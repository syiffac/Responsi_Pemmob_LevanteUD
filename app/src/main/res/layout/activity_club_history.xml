<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/circle_white_bg"
            android:src="@drawable/ic_arrow_back"
            android:scaleType="centerInside"
            android:padding="8dp"
            android:contentDescription="Back"
            android:layout_marginBottom="16dp" />

        <!-- Header Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/levante_history"
                    android:contentDescription="Levante Stadium" />

                <!-- Dark overlay -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/image_overlay" />

                <!-- Club Logo -->
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/levante_logo"
                    android:contentDescription="Levante Logo"
                    android:background="@drawable/circle_white_bg"
                    android:padding="12dp" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <!-- Content Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            android:backgroundTint="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Title -->
                <TextView
                    android:id="@+id/tv_history_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Club History"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@color/levante_dark_blue"
                    android:gravity="center"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="sans-serif-medium" />

                <!-- Divider -->
                <View
                    android:layout_width="60dp"
                    android:layout_height="3dp"
                    android:layout_gravity="center"
                    android:background="@color/levante_red"
                    android:layout_marginBottom="20dp" />

                <!-- History Content -->
                <TextView
                    android:id="@+id/tv_history_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Loading history..."
                    android:textSize="15sp"
                    android:textColor="@color/text_gray"
                    android:lineSpacingMultiplier="1.5"
                    android:justificationMode="inter_word" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>