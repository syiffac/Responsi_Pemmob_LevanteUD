<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/circle_white_bg"
            android:src="@drawable/ic_arrow_back"
            android:scaleType="centerInside"
            android:padding="8dp"
            android:contentDescription="Back"
            android:layout_marginBottom="16dp" />

        <!-- Header Card - FIXED SIZE -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/levante_coach"
                    android:contentDescription="Levante Stadium" />

                <!-- Dark overlay -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/image_overlay" />

                <!-- Coach Photo Placeholder - REDUCED SIZE -->
                <androidx.cardview.widget.CardView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_centerInParent="true"
                    app:cardCornerRadius="35dp"
                    app:cardElevation="6dp"
                    android:backgroundTint="@android:color/white">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_coach"
                        android:contentDescription="Coach Photo"
                        android:padding="12dp"
                        android:scaleType="centerInside" />

                </androidx.cardview.widget.CardView>

                <!-- Coach Title Overlay -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="12dp"
                    android:text="HEAD COACH"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:shadowColor="@android:color/black"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="3" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <!-- Coach Info Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            android:backgroundTint="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Title -->
                <TextView
                    android:id="@+id/tv_coach_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Head Coach"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/levante_dark_blue"
                    android:gravity="center"
                    android:layout_marginBottom="12dp"
                    android:fontFamily="sans-serif-medium" />

                <!-- Divider -->
                <View
                    android:layout_width="50dp"
                    android:layout_height="3dp"
                    android:layout_gravity="center"
                    android:background="@color/levante_red"
                    android:layout_marginBottom="16dp" />

                <!-- Coach Name -->
                <TextView
                    android:id="@+id/tv_coach_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Loading..."
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_dark"
                    android:gravity="center"
                    android:layout_marginBottom="6dp" />

                <!-- Coach Position -->
                <TextView
                    android:id="@+id/tv_coach_position"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Loading..."
                    android:textSize="14sp"
                    android:textColor="@color/levante_blue"
                    android:gravity="center"
                    android:layout_marginBottom="16dp" />

                <!-- Coach Details Grid - COMPACT VERSION -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp"
                    android:baselineAligned="false">

                    <!-- Nationality Column -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="6dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nationality"
                            android:textSize="11sp"
                            android:textColor="@color/text_gray"
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tv_coach_nationality"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Loading..."
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_dark"
                            android:gravity="center"
                            android:minHeight="18dp" />

                    </LinearLayout>

                    <!-- Divider Line -->
                    <View
                        android:layout_width="1dp"
                        android:layout_height="30dp"
                        android:background="@color/text_gray"
                        android:alpha="0.3"
                        android:layout_gravity="center" />

                    <!-- Age Column -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="6dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Age"
                            android:textSize="11sp"
                            android:textColor="@color/text_gray"
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tv_coach_age"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Loading..."
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_dark"
                            android:gravity="center"
                            android:minHeight="18dp" />

                    </LinearLayout>

                    <!-- Divider Line -->
                    <View
                        android:layout_width="1dp"
                        android:layout_height="30dp"
                        android:background="@color/text_gray"
                        android:alpha="0.3"
                        android:layout_gravity="center" />

                    <!-- Experience Column -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="6dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Experience"
                            android:textSize="11sp"
                            android:textColor="@color/text_gray"
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tv_coach_experience"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Loading..."
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_dark"
                            android:gravity="center"
                            android:minHeight="18dp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Biography Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            android:backgroundTint="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Biography"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/levante_dark_blue"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/tv_coach_biography"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Loading biography..."
                    android:textSize="14sp"
                    android:textColor="@color/text_gray"
                    android:lineSpacingMultiplier="1.5" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Career Highlights Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            android:backgroundTint="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Career Highlights"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/levante_dark_blue"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/tv_career_highlights"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Loading career highlights..."
                    android:textSize="14sp"
                    android:textColor="@color/text_gray"
                    android:lineSpacingMultiplier="1.5" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Coaching Philosophy Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            android:backgroundTint="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Coaching Philosophy"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/levante_dark_blue"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/tv_coaching_philosophy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Loading coaching philosophy..."
                    android:textSize="14sp"
                    android:textColor="@color/text_gray"
                    android:lineSpacingMultiplier="1.5" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>